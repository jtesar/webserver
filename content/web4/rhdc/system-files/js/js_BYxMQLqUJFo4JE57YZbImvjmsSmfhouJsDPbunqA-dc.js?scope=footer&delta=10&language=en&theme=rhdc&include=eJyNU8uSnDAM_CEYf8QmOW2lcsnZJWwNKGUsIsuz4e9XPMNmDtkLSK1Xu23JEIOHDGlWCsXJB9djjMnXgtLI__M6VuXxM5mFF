(function(Drupal){"use strict";customElements.whenDefined("rh-footer").then(()=>{const activeClass='show';const toggle=document.getElementById('footer-language-toggle');const toggleArrow=document.querySelector('#footer-language-toggle > span');const tray=document.getElementById('footer-language-picker');if(toggle!==null)toggle.addEventListener('click',function(e){if(tray.classList.contains(activeClass)){toggleMenu('hide');window.removeEventListener('keyup',escKeyListener);}else{toggleMenu('show');window.addEventListener('keyup',escKeyListener);}});const toggleMenu=(state)=>{if(state==='show'){tray.classList.add(activeClass);toggleArrow.classList.remove('down');toggleArrow.classList.add('up');}else{tray.classList.remove(activeClass);toggleArrow.classList.remove('up');toggleArrow.classList.add('down');}};const escKeyListener=(e)=>{if(e.key==='Escape')toggleMenu('hide');};});})(Drupal);;
